<core:FragmentDefinition
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:core="sap.ui.core"
    xmlns:mc="sap.suite.ui.microchart"
    xmlns="sap.uxap"
    xmlns:layout="sap.ui.layout"
    xmlns:m="sap.m"
>
    <m:FlexBox
        justifyContent="Start"
        alignContent="Center"
    >
        <m:Avatar
            class="sapUiSmallMarginEnd"
            src="../model/Volkswagen.png"
            displaySize="L"
        />

        <layout:VerticalLayout class="sapUiSmallMarginBeginEnd">
            <m:HBox>
                <core:Icon src="sap-icon://map" />
                <m:Text
                    text="{i18n>Weltzentrale}"
                    class="sapUiTinyMarginBegin"
                />
            </m:HBox>
            <m:HBox class="sapUiTinyMarginTop">
                <core:Icon
                    src="sap-icon://call"
                />
                <m:Link
                    text="+49 178 205705324"
                    class="sapUiTinyMarginBegin"
                />
            </m:HBox>
        </layout:VerticalLayout>

        <layout:VerticalLayout class="sapUiSmallMarginBeginEnd">
            <m:Label text="{i18n>Einleitungstext}" />
        </layout:VerticalLayout>

        <layout:VerticalLayout class="sapUiLargeMarginBegin">
            <m:Label text="{i18n>lblGlbStand}" />
            <mc:HarveyBallMicroChart
                class="sapUiSmallMarginBegin"
                size="S"
                total="100"
                showTotal="false"
                showFractions="false"
            >
                <mc:items>
                    <mc:HarveyBallMicroChartItem
                        fraction="400"
                        color="Good"
                    />
                </mc:items>
            </mc:HarveyBallMicroChart>
        </layout:VerticalLayout>
    </m:FlexBox>
</core:FragmentDefinition>
