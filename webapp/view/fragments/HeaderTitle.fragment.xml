<core:FragmentDefinition
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:core="sap.ui.core"
    xmlns="sap.uxap"
    xmlns:layout="sap.ui.layout"
    xmlns:m="sap.m"
>
    <ObjectPageDynamicHeaderTitle>
        <expandedHeading>
            <m:HBox>
                <m:Title
                    text="{i18n>TitleHeader}"
                    wrapping="true"
                />
                <m:ObjectMarker
                    type="Favorite"
                    class="sapUiTinyMarginBegin"
                />
            </m:HBox>
        </expandedHeading>

        <snappedHeading>
            <m:FlexBox
                fitContainer="true"
                alignItems="Center"
            >
                <m:Avatar
                    src="../model/Volkswagen.png"
                    class="sapUiTinyMarginEnd"
                />
                <m:Title
                    text="{i18n>TitleHeader}"
                    wrapping="true"
                />
            </m:FlexBox>
        </snappedHeading>

        <expandedContent>
            <m:Text text="{i18n>Untertitel}" />
        </expandedContent>

        <snappedContent>
            <m:Text text="{i18n>Untertitel}" />
        </snappedContent>

        <actions />
    </ObjectPageDynamicHeaderTitle>
</core:FragmentDefinition>
