<core:FragmentDefinition
    xmlns="sap.ui.table"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:m="sap.m"
    xmlns:u="sap.ui.unified"
    xmlns:core="sap.ui.core"
>
    <TreeTable
        id="TreeTableBasic"
        rows="{path:'Tree>/data/volkswagenwerk', parameters: {arrayNames:['kpi']}}"
        selectionMode="None"
        enableSelectAll="false"
        ariaLabelledBy="title"
    >
        <extension>
            <m:OverflowToolbar style="Clear">
                <m:Title
                    id="title"
                    text="{i18n>TreeTableTitle}"
                />
                <m:ToolbarSpacer />
                <m:Button
                    icon="sap-icon://drill-up"
                    press="onCollapseAll"
                />
                <m:Button
                    icon="sap-icon://drill-down"
                    press="onExpand"
                />
            </m:OverflowToolbar>
        </extension>
        <columns>
            <Column>
                <m:Label text="{i18n>Treetablefirstcolumn}" />
                <template>
                    <m:Text
                        text="{Tree>name}"
                        wrapping="false"
                    />
                </template>
            </Column>
            <Column width="30%">
                <m:Label text="{i18n>Treetablesecondcolumn}" />
                <template>
                    <m:ProgressIndicator
                        percentValue="{Tree>wert}"
                        displayValue="{
        parts: [
            { path: 'Tree>wert' },
            { path: 'Tree>type' }  
        ],
        formatter: '.zinebFormatter.displayValue'
    }"
                        showValue="true"
                        visible="{= ${Tree>wert} !== undefined}"
                        state="{Tree>state}"
                    />
                </template>
            </Column>
        </columns>
    </TreeTable>
</core:FragmentDefinition>
