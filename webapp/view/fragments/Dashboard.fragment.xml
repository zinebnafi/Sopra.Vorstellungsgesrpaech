<core:FragmentDefinition
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:core="sap.ui.core"
    xmlns:layout="sap.ui.layout"
    xmlns="sap.m"
    xmlns:viz="sap.viz.ui5.controls"
    xmlns:viz.feeds="sap.viz.ui5.controls.common.feeds"
    xmlns:viz.data="sap.viz.ui5.data"
>
    <layout:FixFlex
        id='chartFixFlex'
        minFlexSize="500"
    >
        <!--Below is the setting panel -->
        <layout:fixContent>
            <Panel
                id='settingsPanel'
                expandable="true"
                expanded="true"
                headerText="Settings"
                width="auto"
            >
                <content>
                    <HBox>
                        <VBox>
                            <Label
                                text="{i18n>lblCity}"
                                design="Bold"
                            />
                            <Select
                                id="idSelect"
                                change="onDatasetSelected"
                                forceSelection="true"
                                items="{
						path: '/datadashboard/cities',
						sorter: { path: 'name' }
					}"
                            >
                                <core:Item
                                    key="{name}"
                                    text="{name}"
                                />
                            </Select>
                        </VBox>
                    </HBox>
                </content>
            </Panel>
        </layout:fixContent>
        <layout:flexContent>
            <viz:VizFrame
                id="idVizFrame"
                uiConfig="{applicationSet:'fiori'}"
                height='100%'
                width="100%"
                vizType='radar'
            >
                <viz:dataset>
                    <viz.data:FlattenedDataset data="{/datadashboard/values}">
                        <viz.data:dimensions>
                            <viz.data:DimensionDefinition
                                name="KPI"
                                value="{kpi}"
                            />
                        </viz.data:dimensions>
                        <viz.data:measures>
                            <viz.data:MeasureDefinition
                                id="idMeasure"
                                name="Wert"
                            />
                        </viz.data:measures>
                    </viz.data:FlattenedDataset>
                </viz:dataset>

                <viz:feeds>
                    <viz.feeds:FeedItem
                        id='valueAxisFeed'
                        uid="valueAxis"
                        type="Measure"
                        values="Wert"
                    />
                    <viz.feeds:FeedItem
                        uid="categoryAxis"
                        type="Dimension"
                        values="KPI"
                    />
                </viz:feeds>
                <viz:dependents>
                    <viz:Popover id="idPopOver" />
                </viz:dependents>
            </viz:VizFrame>
        </layout:flexContent>
    </layout:FixFlex>
</core:FragmentDefinition>
